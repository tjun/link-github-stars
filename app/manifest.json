{
    "name": "link github stars",
    "version": "0.0.1",
    "manifest_version": 2,
    "description": "show github stars count on web page links",
    "icons": {
        "16": "images/icon-16.png",
        "128": "images/icon-128.png"
    },
    "default_locale": "en",
    "background": {
        "scripts": [
            "scripts/background.js"
        ],
        "persistent": false
    },
    "permissions": [
        "activeTab",
        "http://*/*",
        "https://*/*",
        "background"
    ],
    "page_action": {
        "default_icon": {
            "19": "images/icon-19.png",
            "38": "images/icon-38.png"
        },
        "default_title": "link github stars",
        "default_popup": "popup.html"
    }
}