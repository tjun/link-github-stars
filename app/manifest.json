{
    "name": "link github stars",
    "version": "0.0.1",
    "manifest_version": 2,
    "description": "show github stars count for each links on page",
    "icons": {
        "16": "images/icon-16.png",
        "128": "images/icon-128.png"
    },
    "default_locale": "en",
    "background": {
        "scripts": []
    },
    "permissions": [
        "tabs",
        "http://*/*",
        "https://*/*"
    ],
    "content_scripts": [{
        "matches": [
            "http://*/*",
            "https://*/*"
        ],
        "js": [
            "bower_components/jquery/dist/jquery.min.js",
            "scripts/contentscript.js"
        ],
        "css": ["styles/main.css"],
        "run_at": "document_end",
        "all_frames": false
    }],
    "page_action": {
        "default_icon": {
            "19": "images/icon-19.png",
            "38": "images/icon-38.png"
        },
        "default_title": "link github stars",
        "default_popup": "popup.html"
    }
}